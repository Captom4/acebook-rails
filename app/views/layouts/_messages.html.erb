<% if notice %>
  <p class="alert alert-success alert-dismissible show">
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button></p>
<% end %>
<!--fix fading issue -->
<% if alert %>
  <p class="alert alert-danger alert-dismissible show">
    <%= alert %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </p>
<% end %>